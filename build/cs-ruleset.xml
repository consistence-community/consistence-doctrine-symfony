<?xml version="1.0"?>
<ruleset name="ConsistenceDoctrineBundle">
	<rule ref="../vendor/consistence-community/coding-standard/Consistence/ruleset.xml"/>
	<rule ref="SlevomatCodingStandard.Files.TypeNameMatchesFileName">
		<properties>
			<property name="rootNamespaces" type="array">
				<element key="src" value="Consistence\Doctrine\SymfonyBundle"/>
				<element key="tests" value="Consistence\Doctrine\SymfonyBundle"/>
			</property>
		</properties>
		<exclude-pattern>*/data/*.php</exclude-pattern>
		<exclude-pattern>*/exceptions/*Exception.php</exclude-pattern>
	</rule>
	<rule ref="SlevomatCodingStandard.Classes.UnusedPrivateElements">
		<exclude-pattern>*/data/*.php</exclude-pattern>
	</rule>
	<rule ref="SlevomatCodingStandard.TypeHints.PropertyTypeHint">
		<properties>
			<property name="enableNativeTypeHint" value="false"/>
		</properties>
	</rule>
</ruleset>
